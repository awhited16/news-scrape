<h1>News Scraper</h1>

<p>View and comment on the latest news.</p>

<ul>
  {{#each articles}}
  	<li>
      <p><span class="label">Headline:</span> {{this.headline}}</p>
      <p><span class="label">Summary:</span> {{this.summary}}</p>
      <p><span class="label">URL:</span> {{this.url}}</p>

      <br>
      <h2>Comments:</h2>
      <p>{{this.Comments}}</p>

      <div class="form-group">
        <label for="comments">Comment:</label>
        <textarea id="comments" name="comments" rows="4" cols="40">{{this.comments}}</textarea>
      </div>
      
      <button data-id="{{this.id}}" id="submit">Submit</button>
  	</li>
  {{/each}}
</ul>